<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" spacing="10" styleClass="quick-add-bar" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.talaatharb.workday.ui.controllers.QuickAddController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="Quick Add:" styleClass="quick-add-label">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="quickAddField" promptText="e.g. 'Buy groceries tomorrow at 5pm #personal !high'" styleClass="quick-add-field" HBox.hgrow="ALWAYS">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Button text="Add Task" onAction="#handleQuickAddSubmit" styleClass="quick-add-button" />
   </children>
</HBox>
