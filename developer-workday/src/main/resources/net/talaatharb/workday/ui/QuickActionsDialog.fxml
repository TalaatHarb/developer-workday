<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="0" styleClass="quick-actions-dialog" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.talaatharb.workday.ui.controllers.QuickActionsController">
   <!-- Search Field -->
   <VBox spacing="10" styleClass="search-container">
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
      <children>
         <TextField fx:id="searchField" promptText="Type to search actions..." styleClass="search-field">
            <font>
               <Font size="14.0" />
            </font>
         </TextField>
         <Label fx:id="infoLabel" text="Press Ctrl+Shift+P to toggle • ↑↓ to navigate • Enter to execute" styleClass="info-label">
            <font>
               <Font size="11.0" />
            </font>
         </Label>
      </children>
   </VBox>
   
   <Separator />
   
   <!-- Actions List -->
   <ListView fx:id="actionsListView" VBox.vgrow="ALWAYS" styleClass="actions-list">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </ListView>
   
   <!-- Status Bar -->
   <HBox spacing="10" alignment="CENTER_LEFT" styleClass="status-bar">
      <padding>
         <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
      </padding>
      <children>
         <Label fx:id="statusLabel" text="">
            <font>
               <Font size="11.0" />
            </font>
         </Label>
      </children>
   </HBox>
</VBox>
